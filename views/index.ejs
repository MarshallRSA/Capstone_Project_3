<%- include('partials/header') %>
<main>
  <div class="container my-5">
    <div class="row">
      <h1>Welcome to Postcard</h1>
    </div>
  </div>
  <div class="container my-5">
    <div class="row">
      <% posts.forEach(post => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <img src="<%= post.image %>" class="card-img-top" height="200px" width="100%" alt="Image for <%= post.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text"><%= post.content %></p>
              <a href="/blog/<%= post.id %>" class="btn btn-secondary">Learn More</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</main>
<%- include('partials/footer') %>
