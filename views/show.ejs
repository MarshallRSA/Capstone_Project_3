<%- include('partials/header') %>
    <main>
        <div class="container my-5">
            <div class="col-md-10 col-lg-12">
                <h1 class="mt-5">
                    <%= post.title %>
                </h1>

                <p class="mt-3">
                    <%= post.content %>
                </p>
                <a href="/blog/<%= post.id %>/edit">Edit Post</a>
                <form action="/blog/<%= post.id %>/delete" method="POST" style="display:inline;">
                    <button class="mb-3" type="submit" onclick="return confirm('Are you sure?')">Delete Post</button>
                </form>
            
                <br>
                <a href="/blog">Back to Blog</a>
            </div>
        </div>
    </main>
    <%- include('partials/footer') %>